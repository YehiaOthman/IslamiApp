<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عدد التسبيحات"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="440dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />


    <ImageView
        android:layout_width="73dp"
        android:layout_height="105dp"
        android:src="@drawable/head_of_seb7a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="90dp"

        />

    <ImageView
        android:id="@+id/sebha_Iv"
        android:layout_width="232dp"
        android:layout_height="234dp"
        android:src="@drawable/body_of_seb7a"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="170dp"
        />

    <ImageView
        android:id="@+id/zekr_CounterImg_Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="485dp"
        android:src="@drawable/rectangle_3"
        />

    <TextView
        android:id="@+id/zekr_CounterTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"
        android:text=""
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/zekrIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="590dp"
        android:src="@drawable/rectangle_4"
        />
    <TextView
        android:id="@+id/zekrTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/zekrIv"
        app:layout_constraintBottom_toBottomOf="@id/zekrIv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="سبحان الله"
        android:textSize="25dp"
        android:textStyle="bold"
        />






</androidx.constraintlayout.widget.ConstraintLayout>