<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/radio_img_Iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/radio_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp"
        />

    <TextView
        android:id="@+id/radioTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radio_img_Iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="إذاعة القرآن الكريم"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioTv"
        android:src="@drawable/icon_metro_prev"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="18dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioTv"
        android:src="@drawable/icon_awesome_play"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="12dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioTv"
        android:src="@drawable/icon_metro_next__1_"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="18dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>